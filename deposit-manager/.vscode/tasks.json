{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Foundry tests (current file)",
      "type": "shell",
      "command": "forge test --match-path ${file} -vv",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "clear": true
      },
      "problemMatcher": []
    }
  ]
}

